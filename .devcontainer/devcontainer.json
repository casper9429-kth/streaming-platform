{
  "name": "Ruby Rails Development",
  "image": "ruby:3.2",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {},
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "rebornix.ruby",
        "wingrunr21.vscode-ruby",
        "castwide.solargraph",
        "kaiwood.endwise"
      ],
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      }
    }
  },
  "postCreateCommand": "gem install rails",
  "remoteUser": "vscode"
}
